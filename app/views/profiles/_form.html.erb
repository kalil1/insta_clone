<%= stylesheet_link_tag "forms" %>

<div id="wrapper">
  <div class="sub-content">
    <div class="s-part">
      <img id="blah" src="" alt="">
    </div>
  </div>
  <div class="main-content">
    <div class="header">
      <h1>Profile</h1>
    </div>
    <div class="l-part">
      <%= form_with(model: profile, local: true) do |form| %>
        <% if profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class: "input-1" %>
        </div>

        <div class="field">
          <%= form.label :website %>
          <%= form.text_field :website, class: "input-1" %>
        </div>

        <div class="field">
          <%= form.label :bio %>
          <%= form.text_area :bio, class: "input-1" %>
        </div>

        <div class="field">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: "input-1" %>
        </div>

        <div class="field">
          <%= form.label :profile_pic %>
          <%= form.file_field :profile_pic, class: "input-1", onchange: "readURL(this)" %>
        </div>


        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
