<%= stylesheet_link_tag "forms" %>
<link href="https://fonts.googleapis.com/css?family=Indie+Flower|Overpass+Mono" rel="stylesheet">

<div id="wrapper">
  <div class="main-content_signup">
    <div class="header">
      <img src="https://i.imgur.com/zqpwkLQ.png" />
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="l-part">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-1"  %>
      <%= f.label :username %><br />
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "input-1"  %>
      <div class="overlap-text">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input-2" %>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-2" %>
      </div>
          <%= f.submit "Sign up", class: "btn" %>
      <% end %>
    </div>
  </div>
  <div class="sub-content">
    <div class="s-part">
      Already have an account?<a href="<%= new_session_path(resource_name) %>"> Log In</a>
    </div>
  </div>
</div>
